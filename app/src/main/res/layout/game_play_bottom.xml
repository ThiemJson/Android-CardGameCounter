<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/game_play_players_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end|top"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="2"
            android:fontFamily="@font/lincol"
            android:gravity="center"
            android:text="Players: 12"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/blue_primary"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/game_play_game_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start|top"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_weight="2"
            android:fontFamily="@font/lincol"
            android:gravity="center"
            android:text="dadasda"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/blue_primary"
            android:textSize="20dp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:background="@drawable/color_background_gradient">

            <Button
                android:id="@+id/game_play_game_list"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="20dp"
                android:background="@drawable/ic_baseline_history_24" />

            <Button
                android:id="@+id/game_play_round_chart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="80dp"
                android:background="@drawable/ic_baseline_bar_chart_24" />

            <Button
                android:id="@+id/game_play_round_setting"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="20dp"
                android:background="@drawable/ic_baseline_dehaze_24" />
        </FrameLayout>

        <ImageView
            android:id="@+id/game_play_add"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="40dp"
            android:background="@drawable/color_game_round_add_background"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:src="@drawable/ic_baseline_add_24"
            android:text="Start Game"
            android:textAppearance="@style/playerListName"
            android:textColor="@color/blue_primary"
            android:textFontWeight="700"
            android:textSize="20sp"
            android:textStyle="bold" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>