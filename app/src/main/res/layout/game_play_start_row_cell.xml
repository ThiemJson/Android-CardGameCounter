<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/game_play_row_width"
    android:layout_height="@dimen/game_play_row_height"
    android:elevation="2dp"
    android:translationZ="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:gravity="center_horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="100"
            android:textAppearance="@style/playerListName"
            android:textColor="@color/blue_primary"
            android:textSize="12sp" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/button_game_play_start_row_background"
            android:elevation="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="x5"
            android:textColor="#f2f2f2"
            android:textSize="12sp"
            android:translationZ="5dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>