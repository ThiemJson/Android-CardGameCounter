<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.gameplay.GamePlay">

    <HorizontalScrollView
        android:id="@+id/game_play_horizontal_scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:clickable="false"
        app:layout_constraintBottom_toTopOf="@+id/game_play_bottom_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ScrollView
                android:id="@+id/game_play_table_vertical_scroll_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp">

                <TableLayout
                    android:id="@+id/game_play_grid_table_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </ScrollView>

            <TableLayout
                android:id="@+id/game_play_grid_floating_row_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/game_play_table_vertical_scroll_view"
                android:layout_alignLeft="@+id/game_play_table_vertical_scroll_view"
                android:layout_alignEnd="@+id/game_play_table_vertical_scroll_view"
                android:layout_alignRight="@+id/game_play_table_vertical_scroll_view"
                android:layout_alignParentTop="true" />
        </RelativeLayout>
    </HorizontalScrollView>

    <include
        android:id="@+id/game_play_bottom_container"
        layout="@layout/game_play_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>