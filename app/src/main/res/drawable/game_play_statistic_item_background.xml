    <padding
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp" />
    <corners
        android:bottomLeftRadius="50dp"
        android:bottomRightRadius="15dp"
        android:topLeftRadius="50dp"
        android:topRightRadius="15dp" />
